<h1 class="primary text-3xl font-bold mb-10">Dashboard</h1>

<div class="flex">
  <div class="w-1/3 border divide-y divide-solid">
    <div>
      <p class="py-3 px-5"><%= @urls.count %> Results</p>
    </div>
    <% @urls.each do |url| %>
      <div class="flex flex-col py-5 <%= "bg-orange-100 font-semibold" if params[:id] == url.id.to_s %>">
        <%= link_to url_path(url), class: "px-5" do %>
          <p class="text-xl mb-3"><%= url.title.truncate(30) %></p>
          <p class="text-orange-500"><%= url.final_url %></p>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="w-2/3 px-10 py-5 bg-gray-100 h-screen">
    <%= @url.short_link %>
  </div>
</div>
