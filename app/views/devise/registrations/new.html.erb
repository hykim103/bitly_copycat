<div class="container flex flex-col items-center justify-center">
  <h2 class="primary text-3xl font-semibold mb-10">Sign up</h2>

  <div>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs flex flex-col">
        <div class="mb-3">
          <%= f.label :email, class: "mr-3" %>
          <%= f.input_field :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" },
                      class: "w-full" %>
        </div>
        <div class="mb-3">
          <%= f.label :password %>
          <%= f.input_field :password,
                      required: true,
                      input_html: { autocomplete: "new-password" },
                      class: "w-full" %>
          <div class="text-sm text-orange-500 ml-1">
            <%= f.hint "#{@minimum_password_length} characters minimum" if @minimum_password_length %>
          </div>
        </div>
        <div class="mb-5">
          <%= f.label :password_confirmation %>
          <%= f.input_field :password_confirmation,
                      required: true,
                      input_html: { autocomplete: "new-password" },
                      class: "w-full" %>
        </div>
      </div>

      <div class="form-actions flex justify-center w-full">
        <%= f.button :submit, "Sign up", class: "w-full px-5 py-3" %>
      </div>
    <% end %>

    <p class="flex justify-center items-center mt-3">
      <span class="mr-3">Already have an account?</span>
      <span class="text-orange-500 text-lg"><%= render "devise/shared/links" %></span>
    </p>
  </div>
</div>
