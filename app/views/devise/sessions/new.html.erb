<div class="container flex flex-col items-center justify-center">
  <h2 class="primary text-3xl font-semibold mb-10">Log In</h2>

  <div>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs flex flex-col">
        <div class="mb-3">
          <%= f.label :email, class: "mr-3" %>
          <%= f.input_field :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" },
                      class: "w-full" %>
        </div>
        <div class="mb-3">
          <%= f.label :password %>
          <%= f.input_field :password,
                      required: false,
                      input_html: { autocomplete: "current-password" },
                      class: "w-full" %>
        </div>
        <div class="mb-5">
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
      </div>

      <div class="form-actions flex justify-center w-full">
        <%= f.button :submit, "Log In", class: "w-full px-5 py-3" %>
      </div>
    <% end %>

    <p class="mt-5">
      <%= render "devise/shared/links" %>
    </p>
  </div>
</div>
